.phpdocumentor .phpdocumentor-back-to-top {
    position: fixed;
    bottom: 2rem;
    font-size: 2.5rem;
    opacity: 1.0;
    transition: all .3s ease-in-out;
    right: 2rem;
    color: var(--primary-color-lighten);
}

.phpdocumentor .phpdocumentor-back-to-top:hover {
    color: var(--primary-color-darken);
    opacity: 1.0;
}
